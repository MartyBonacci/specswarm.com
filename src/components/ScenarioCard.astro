---
interface Props {
  title: string;
  description: string;
  persona?: string; // e.g., "Developer", "Team Lead", "Startup Founder"
  outcome: string; // The successful outcome/result
  href?: string; // Optional link to learn more
  class?: string;
}

const {
  title,
  description,
  persona,
  outcome,
  href,
  class: className,
} = Astro.props;

const Component = href ? 'a' : 'div';
---

<Component
  href={href}
  class:list={['scenario-card', { 'scenario-card-link': href }, className]}
>
  {persona && (
    <div class="scenario-card-persona">
      {persona}
    </div>
  )}

  <div class="scenario-card-content">
    <h3 class="scenario-card-title">{title}</h3>
    <p class="scenario-card-description">{description}</p>

    <div class="scenario-card-outcome">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="outcome-icon"
        aria-hidden="true"
      >
        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
        <polyline points="22 4 12 14.01 9 11.01"></polyline>
      </svg>
      <span class="outcome-text">{outcome}</span>
    </div>
  </div>

  {href && (
    <div class="scenario-card-arrow" aria-hidden="true">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="5" y1="12" x2="19" y2="12"></line>
        <polyline points="12 5 19 12 12 19"></polyline>
      </svg>
    </div>
  )}
</Component>

<style>
  .scenario-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    transition: all var(--duration-fast) ease-out;
    position: relative;
  }

  /* Link variant */
  .scenario-card-link {
    text-decoration: none;
    cursor: pointer;
  }

  .scenario-card-link:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 16px rgba(217, 119, 87, 0.1);
    transform: translateY(-2px);
  }

  .scenario-card-link:hover .scenario-card-arrow {
    transform: translateX(4px);
  }

  /* Persona Badge */
  .scenario-card-persona {
    display: inline-block;
    width: fit-content;
    padding: 0.375rem 0.75rem;
    background-color: rgba(217, 119, 87, 0.1);
    color: var(--color-accent);
    font-size: 0.8125rem;
    font-weight: 600;
    border-radius: 0.375rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Content */
  .scenario-card-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    flex: 1;
  }

  .scenario-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
    margin: 0;
  }

  .scenario-card-description {
    font-size: 0.9375rem;
    color: var(--color-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Outcome Section */
  .scenario-card-outcome {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    padding-top: var(--spacing-sm);
    margin-top: auto;
  }

  .outcome-icon {
    color: var(--color-accent);
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .outcome-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
    line-height: 1.5;
  }

  /* Arrow (for link variant) */
  .scenario-card-arrow {
    position: absolute;
    top: var(--spacing-lg);
    right: var(--spacing-lg);
    color: var(--color-secondary);
    transition: transform var(--duration-fast) ease-out;
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .scenario-card {
      transition: none;
    }

    .scenario-card-link:hover {
      transform: none;
    }

    .scenario-card-link:hover .scenario-card-arrow {
      transform: none;
    }
  }

  /* Mobile Adjustments */
  @media (max-width: 640px) {
    .scenario-card {
      padding: var(--spacing-md);
    }

    .scenario-card-title {
      font-size: 1.125rem;
      padding-right: 2rem; /* Space for arrow on mobile */
    }

    .scenario-card-description {
      font-size: 0.875rem;
    }

    .scenario-card-arrow {
      top: var(--spacing-md);
      right: var(--spacing-md);
    }
  }
</style>
