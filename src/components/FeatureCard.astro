---
interface Props {
  icon?: string; // Lucide icon name (e.g., 'shield', 'zap', 'check-circle')
  title: string;
  description: string;
  metric?: string; // Optional metric to display (e.g., "85-90%", "96.3%")
  class?: string;
}

const {
  icon,
  title,
  description,
  metric,
  class: className,
} = Astro.props;

// Icon mapping - using simple SVG paths for common icons
const icons: Record<string, string> = {
  shield: 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z',
  zap: 'M13 2L3 14h9l-1 8 10-12h-9l1-8z',
  'check-circle': 'M22 11.08V12a10 10 0 1 1-5.93-9.14M22 4L12 14.01l-3-3',
  'trending-up': 'M23 6l-9.5 9.5-5-5L1 18M23 6h-7M23 6v7',
  target: 'M12 2a10 10 0 1 0 10 10M12 2a10 10 0 0 0-10 10m10-10v10m0 0h10m-10 0H2',
  layers: 'M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5',
};

const iconPath = icon ? icons[icon] : null;
---

<div class:list={[
  'flex flex-col gap-[var(--spacing-md)] p-[var(--spacing-lg)] bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl transition-all duration-[var(--duration-fast)] ease-out hover:border-[var(--color-accent)] hover:shadow-[0_4px_16px_rgba(217,119,87,0.1)] hover:-translate-y-0.5 motion-reduce:transition-none motion-reduce:hover:transform-none sm:p-[var(--spacing-md)]',
  className
]}>
  {iconPath && (
    <div
      class="flex items-center justify-center w-12 h-12 bg-[rgba(217,119,87,0.1)] rounded-xl text-[var(--color-accent)]"
      aria-hidden="true"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d={iconPath} />
      </svg>
    </div>
  )}

  <div class="flex flex-col gap-[var(--spacing-sm)]">
    <h3 class="text-xl sm:text-lg font-bold text-[var(--color-primary)] m-0">{title}</h3>
    <p class="text-[0.9375rem] sm:text-sm text-[var(--color-secondary)] leading-relaxed m-0">{description}</p>
    {metric && (
      <div class="inline-flex items-baseline gap-2 px-3 py-2 bg-[rgba(217,119,87,0.1)] rounded-md w-fit mt-[var(--spacing-xs)]">
        <span class="text-lg font-bold text-[var(--color-accent)]">{metric}</span>
        <span class="text-[0.8125rem] font-medium text-[var(--color-secondary)]">improvement</span>
      </div>
    )}
  </div>
</div>
