---
interface Props {
  icon?: string; // Lucide icon name (e.g., 'shield', 'zap', 'check-circle')
  title: string;
  description: string;
  metric?: string; // Optional metric to display (e.g., "85-90%", "96.3%")
  class?: string;
}

const {
  icon,
  title,
  description,
  metric,
  class: className,
} = Astro.props;

// Icon mapping - using simple SVG paths for common icons
const icons: Record<string, string> = {
  shield: 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z',
  zap: 'M13 2L3 14h9l-1 8 10-12h-9l1-8z',
  'check-circle': 'M22 11.08V12a10 10 0 1 1-5.93-9.14M22 4L12 14.01l-3-3',
  'trending-up': 'M23 6l-9.5 9.5-5-5L1 18M23 6h-7M23 6v7',
  target: 'M12 2a10 10 0 1 0 10 10M12 2a10 10 0 0 0-10 10m10-10v10m0 0h10m-10 0H2',
  layers: 'M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5',
};

const iconPath = icon ? icons[icon] : null;
---

<div class:list={['feature-card', className]}>
  {iconPath && (
    <div class="feature-card-icon" aria-hidden="true">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d={iconPath} />
      </svg>
    </div>
  )}

  <div class="feature-card-content">
    <h3 class="feature-card-title">{title}</h3>
    <p class="feature-card-description">{description}</p>
    {metric && (
      <div class="feature-card-metric">
        <span class="metric-value">{metric}</span>
        <span class="metric-label">improvement</span>
      </div>
    )}
  </div>
</div>

<style>
  .feature-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    transition: all var(--duration-fast) ease-out;
  }

  .feature-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 16px rgba(217, 119, 87, 0.1);
    transform: translateY(-2px);
  }

  /* Icon */
  .feature-card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background-color: rgba(217, 119, 87, 0.1);
    border-radius: 0.75rem;
    color: var(--color-accent);
  }

  /* Content */
  .feature-card-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .feature-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
    margin: 0;
  }

  .feature-card-description {
    font-size: 0.9375rem;
    color: var(--color-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Metric Badge */
  .feature-card-metric {
    display: inline-flex;
    align-items: baseline;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background-color: rgba(217, 119, 87, 0.1);
    border-radius: 0.375rem;
    width: fit-content;
    margin-top: var(--spacing-xs);
  }

  .metric-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-accent);
  }

  .metric-label {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-secondary);
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .feature-card {
      transition: none;
    }

    .feature-card:hover {
      transform: none;
    }
  }

  /* Mobile Adjustments */
  @media (max-width: 640px) {
    .feature-card {
      padding: var(--spacing-md);
    }

    .feature-card-title {
      font-size: 1.125rem;
    }

    .feature-card-description {
      font-size: 0.875rem;
    }
  }
</style>
